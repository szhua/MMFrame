<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    tools:context="com.frame.mengma.mmframe.activities.TabExampleActivity"
    android:orientation="vertical"
    >

    <include
        layout="@layout/header"
        ></include>


    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/tl_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tl:tl_textSelectColor="@color/normal_orange"
        tl:tl_textUnselectColor="#66000000"
        tl:tl_indicator_corner_radius="1.5dp"
        tl:tl_indicator_height="3dp"
        tl:tl_indicator_width="@dimen/common20dp"
        android:background="#ffffff"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        tl:tl_indicator_color="#2C97DE"
        tl:tl_underline_color="#DDDDDD"
        tl:tl_underline_height="1dp"
        tl:tl_textsize="14sp"/>

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/tl_3"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#ffffff"
        tl:tl_iconGravity="LEFT"
        tl:tl_iconHeight="18dp"
        tl:tl_iconMargin="5dp"
        tl:tl_iconWidth="18dp"
        tl:tl_indicator_bounce_enable="false"
        tl:tl_indicator_color="@color/transparent_normal"
        tl:tl_indicator_gravity="BOTTOM"
        tl:tl_textSelectColor="@color/normal_orange"
        tl:tl_textUnselectColor="@color/text_gray_dark"
        tl:tl_textsize="15sp"
        tl:tl_underline_color="#DDDDDD"
        tl:tl_underline_gravity="BOTTOM"
        tl:tl_underline_height="1dp"/>

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/tl_2"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#F6CE59"
        tl:tl_textSelectColor="@color/normal_orange"
        tl:tl_textUnselectColor="@color/white"
        tl:tl_iconVisible="false"
        tl:tl_indicator_corner_radius="1.5dp"
        tl:tl_indicator_width="@dimen/common20dp"
        tl:tl_indicator_color="@color/normal_orange"
        tl:tl_textsize="14sp"/>


    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ></android.support.v4.view.ViewPager>


</LinearLayout>
