<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.frame.mengma.mmframe.activities.HomeActivity">


    <include
        layout="@layout/header"
        android:id="@+id/header"
        ></include>



    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        tl:tl_indicator_color="#2C97DE"
        tl:tl_indicator_corner_radius="1.5dp"
        tl:tl_indicator_height="0dp"
        tl:tl_indicator_width="@dimen/common20dp"
        tl:tl_textSelectColor="@color/text_black"
        tl:tl_textUnselectColor="@color/text_gray_dark"
        tl:tl_textsize="14sp"
        tl:tl_underline_color="@color/transparent_normal"
        tl:tl_underline_height="2dp" />


    <LinearLayout
        android:layout_below="@+id/header"
        android:id="@+id/container"
        android:layout_above="@id/tab"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        ></LinearLayout>
</RelativeLayout>
